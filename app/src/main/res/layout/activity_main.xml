<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:orientation="vertical">

  <CheckBox
      android:id="@+id/allow_manual_input"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:onClick="onAllowManualInputCheckboxClicked"
      android:text="@string/allow_manual_input" />
  <CheckBox
      android:id="@+id/enable_auto_zoom"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:onClick="onEnableAutoZoomCheckboxClicked"
      android:text="@string/enable_auto_zoom" />
  <Button
      android:id="@+id/scan_barcode_button"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:onClick="onScanButtonClicked"
      android:text="@string/scan_barcode_button" />
  <TextView
      android:id="@+id/barcode_result_view"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="" />
  <Button
      android:id="@+id/create_barcode_qr_code_button"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:onClick="onCreateButtonClicked"
      android:text="@string/create_barcode_button" />
  
  <ImageView
      android:id="@+id/qr_image_view"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="20dp"
      android:layout_marginStart="20dp"

      />
</LinearLayout>
